# ============================================
# Champion Clone - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - Authentication
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-change-this-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this

# ============================================
# OPTIONAL - AI Services
# ============================================
# Anthropic Claude API (for AI responses)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI API (for Whisper transcription)
OPENAI_API_KEY=sk-xxxxx

# ElevenLabs API (for voice synthesis)
ELEVENLABS_API_KEY=xxxxx

# ============================================
# OPTIONAL - LemonSqueezy (Payments)
# ============================================
# Leave empty to disable payments
LEMONSQUEEZY_API_KEY=
LEMONSQUEEZY_WEBHOOK_SECRET=
LEMONSQUEEZY_STORE_ID=
LEMONSQUEEZY_VARIANT_STARTER=
LEMONSQUEEZY_VARIANT_PRO=
LEMONSQUEEZY_VARIANT_ENTERPRISE=

# ============================================
# PRODUCTION ONLY
# ============================================
# URLs for production deployment
API_URL=https://api.champion-clone.com
FRONTEND_URL=https://champion-clone.com
CORS_ORIGINS=https://champion-clone.com,https://www.champion-clone.com

# Debug mode (set to false in production)
DEBUG=false

# ============================================
# DATABASE (Optional - defaults to SQLite)
# ============================================
# For PostgreSQL in production:
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/champion_clone
