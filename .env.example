# =============================================================================
# Champion Clone - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!
# =============================================================================

# =============================================================================
# REQUIRED - Authentication
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-change-this-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this

# =============================================================================
# DATABASE
# =============================================================================
# Development (SQLite - default)
DATABASE_URL=sqlite+aiosqlite:///./data/champion_clone.db

# Production (PostgreSQL) - uncomment for production
# DATABASE_URL=postgresql+asyncpg://champion:password@db:5432/champion_clone
# DB_USER=champion
# DB_PASSWORD=secure_password
# DB_NAME=champion_clone

# =============================================================================
# REDIS & CELERY
# =============================================================================
REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your_redis_password  # Required in production

CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# AI SERVICES
# =============================================================================
# Anthropic Claude API (REQUIRED for core functionality)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI API (for Whisper transcription)
OPENAI_API_KEY=sk-xxxxx

# ElevenLabs API (for voice synthesis - optional)
ELEVENLABS_API_KEY=xxxxx

# Groq (FREE alternative to Claude - optional)
GROQ_API_KEY=gsk_xxxxx

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=DEBUG
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://127.0.0.1:3000

# =============================================================================
# RATE LIMITS
# =============================================================================
RATE_LIMIT_UPLOAD=10/hour
RATE_LIMIT_ANALYZE=20/hour
RATE_LIMIT_TRAINING=60/minute
RATE_LIMIT_LOGIN=10/minute
RATE_LIMIT_REGISTER=5/hour

# =============================================================================
# PAYMENTS (LemonSqueezy)
# =============================================================================
LEMONSQUEEZY_API_KEY=
LEMONSQUEEZY_WEBHOOK_SECRET=
LEMONSQUEEZY_STORE_ID=
LEMONSQUEEZY_VARIANT_STARTER=
LEMONSQUEEZY_VARIANT_PRO=
LEMONSQUEEZY_VARIANT_ENTERPRISE=

# =============================================================================
# EMAIL (SMTP - optional)
# =============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@champion-clone.com
# SMTP_PASSWORD=xxxxx
# SMTP_FROM=Champion Clone <noreply@champion-clone.com>
# SMTP_USE_TLS=true

# =============================================================================
# PRODUCTION URLS (change for production)
# =============================================================================
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# GUNICORN (Production)
# =============================================================================
# GUNICORN_WORKERS=4
# GUNICORN_THREADS=2
# GUNICORN_TIMEOUT=120

# =============================================================================
# MONITORING (Production)
# =============================================================================
# GRAFANA_USER=admin
# GRAFANA_PASSWORD=admin
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
