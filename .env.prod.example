# =============================================================================
# Champion Clone - PRODUCTION Environment Variables
# =============================================================================
# Copy this file to .env.prod and fill in your production values
# NEVER commit this file with real credentials!
# =============================================================================

# =============================================================================
# DATABASE (PostgreSQL - REQUIRED)
# =============================================================================
DB_USER=champion
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_NAME=champion_clone
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@db:5432/${DB_NAME}

# =============================================================================
# REDIS (REQUIRED)
# =============================================================================
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/2

# =============================================================================
# SECURITY (REQUIRED - Generate unique values!)
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=GENERATE_WITH_openssl_rand_hex_32
REFRESH_TOKEN_SECRET=GENERATE_WITH_openssl_rand_hex_32

# =============================================================================
# AI SERVICES (REQUIRED)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-xxxxx
OPENAI_API_KEY=sk-xxxxx
ELEVENLABS_API_KEY=xxxxx

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# Domain configuration
DOMAIN=champion-clone.com
API_URL=https://api.champion-clone.com
CORS_ORIGINS=https://champion-clone.com,https://www.champion-clone.com

# =============================================================================
# GUNICORN
# =============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

# =============================================================================
# FILE STORAGE (S3 recommended for production)
# =============================================================================
AWS_ACCESS_KEY_ID=xxxxx
AWS_SECRET_ACCESS_KEY=xxxxx
AWS_S3_BUCKET=champion-clone-uploads
AWS_REGION=eu-west-3

# =============================================================================
# EMAIL (SMTP - REQUIRED for notifications)
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@champion-clone.com
SMTP_PASSWORD=xxxxx
SMTP_FROM=Champion Clone <noreply@champion-clone.com>
SMTP_USE_TLS=true

# =============================================================================
# PAYMENTS (LemonSqueezy)
# =============================================================================
LEMONSQUEEZY_API_KEY=xxxxx
LEMONSQUEEZY_WEBHOOK_SECRET=xxxxx
LEMONSQUEEZY_STORE_ID=xxxxx

# =============================================================================
# MONITORING
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Sentry (optional but recommended)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# =============================================================================
# SSL (Let's Encrypt)
# =============================================================================
CERTBOT_EMAIL=admin@champion-clone.com
